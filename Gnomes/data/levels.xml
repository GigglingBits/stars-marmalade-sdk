<?xml version="1.0" encoding="utf-8"?>
<root xmlns="http://www.gigglingbits.com"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.gigglinbits.com schema.xsd"
      fileformatversion="2">
  <levels>
    <level name="0" width="8" height="8" background="clouds">
      <preamble>
        Move the gnome into the spaceship
      </preamble>

      <!-- infrastructure -->
      <sprite id="ground_left" xpos="0" ypos="0" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="3" y="0"/>
            <point x="3" y="0.8"/>
            <point x="0" y="0.8"/>
          </shape>
        </body>
      </sprite>

      <sprite id="groundpod" xpos="4" ypos="0.0" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="4" y="0"/>
            <point x="4" y="1.3"/>
            <point x="0.5" y="1.3"/>
            <point x="0.0" y="0.8"/>
          </shape>
        </body>
      </sprite>

      <sprite body="grass" xpos="4.5" ypos="1.3" angle="0.0" />
      <sprite body="grass" xpos="5.5" ypos="1.3" angle="0.0" />
      <sprite body="grass" xpos="6.5" ypos="1.3" angle="0.0" />

      <!-- actors -->
      <sprite id="target" body="ufo" xpos="5.5" ypos="3.0" angle="0" />
      <sprite id="hero" body="gnome" xpos="2.0" ypos="2" angle="0" />
      <sprite id="hero2" body="gnome" xpos="2.8" ypos="2" angle="0" />
    </level>

    <level name="1" width="8" height="8" background="clouds">
      <preamble>
        Look for good landing spots!
      </preamble>

      <!-- infrastructure -->
      <sprite id="ground_left" xpos="0" ypos="0" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="3" y="0"/>
            <point x="3" y="0.3"/>
            <point x="2.5" y="0.8"/>
            <point x="0" y="0.8"/>
          </shape>
        </body>
      </sprite>

      <sprite id="groundpod" xpos="5" ypos="2.5" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="3" y="0"/>
            <point x="3" y="1.0"/>
            <point x="0.5" y="1.0"/>
            <point x="0.0" y="0.5"/>
          </shape>
        </body>
      </sprite>

      <sprite id="groundbouncer" xpos="7" ypos="3.5" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="1.0" y="0"/>
            <point x="1.0" y="1.0"/>
          </shape>
        </body>
      </sprite>

      <!-- actors -->
      <sprite id="target" body="ufo" xpos="2.5" ypos="6.0" angle="0" />
      <sprite id="hero" body="gnome" xpos="2.0" ypos="2" angle="0" />
      <sprite id="hero2" body="gnome" xpos="2.8" ypos="2" angle="0" />
    </level>

    <level name="2" width="8" height="8" background="clouds">
      <preamble>
        Beware of the monsters!
      </preamble>

      <!-- infrastructure -->
      <sprite id="ground_left" xpos="0" ypos="0" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="7" y="0"/>
            <point x="7" y="0.3"/>
            <point x="6.5" y="0.8"/>
            <point x="0" y="0.8"/>
          </shape>
        </body>
      </sprite>

      <sprite id="groundpod" xpos="3" ypos="0.8" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="2" y="0"/>
            <point x="2" y="0.5"/>
            <point x="1.5" y="1.0"/>
            <point x="0.5" y="1.0"/>
            <point x="0.0" y="0.5"/>
          </shape>
        </body>
      </sprite>

      <!-- actors -->
      <sprite id="target" body="ufo" xpos="6.5" ypos="3.0" angle="0" />
      <sprite id="hero" body="gnome" xpos="2.0" ypos="2" angle="0" />
      <sprite id="hero2" body="gnome" xpos="2.8" ypos="2" angle="0" />
      <sprite id="monster" body="monster" xpos="4.0" ypos="1.8" angle="0" />
    </level>

    <level name="3" width="10" height="13" background="clouds">

      <preamble>
        Jump from patch to patch!
      </preamble>

      <!-- infrastructure -->
      <sprite id="ground_left" xpos="0" ypos="0" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="8" y="0"/>
            <point x="8" y="0.3"/>
            <point x="7.5" y="0.8"/>
            <point x="0" y="0.8"/>
          </shape>
        </body>
      </sprite>

      <sprite body="shortpodest" xpos="7" ypos="3" angle="0.0"/>
      <sprite body="shortpodest" xpos="0" ypos="5" angle="0.0" />
      <sprite body="shortpodest" xpos="7" ypos="7" angle="0.0"/>

      <!-- actors -->
      <sprite id="hero" body="gnome" xpos="2" ypos="2" angle="0" />
      <sprite id="hero2" body="gnome" xpos="2.8" ypos="2" angle="0" />
      <sprite id="monster" body="monster" xpos="4.0" ypos="0.8" angle="0" />
      <sprite id="target" body="ufo" xpos="2" ypos="10" angle="0" />

    </level>

    <level name="4" width="10" height="13" background="clouds">

      <preamble>
        Jump from patch to patch!
      </preamble>

      <!-- infrastructure -->
      <sprite id="ground_left" xpos="0" ypos="0" angle="0.0">
        <body type="static" texture="ground" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="8" y="0"/>
            <point x="8" y="0.3"/>
            <point x="7.5" y="0.8"/>
            <point x="0" y="0.8"/>
          </shape>
        </body>
      </sprite>

      <sprite body="shortpodest" xpos="0" ypos="5" angle="0.0" />

      <!-- actors -->
      <sprite id="hero" body="gnome" xpos="2" ypos="2" angle="0" />
      <sprite id="hero2" body="gnome" xpos="2.8" ypos="2" angle="0" />
      <sprite id="cata" body="catapult" xpos="5.0" ypos="1.8" angle="0" />
      <sprite id="cata2" body="catapult" xpos="7.0" ypos="1.8" angle="0" />
      <sprite id="target" body="ufo" xpos="2" ypos="10" angle="0" />

    </level>

    <level name="5" width="8" height="6" background="clouds">

      <!-- infrastructure -->
      <sprite xpos="1.5" ypos="1.5" angle="0.0">
        <body type="static" fixture="ice" texture="platform01" resilience="1.0">
          <shape type="polygon">
            <point x="0.0" y="0.0"/>
            <point x="1.5" y="0.0"/>
            <point x="1.5" y="0.5"/>
            <point x="0.0" y="0.5"/>
          </shape>
        </body>
      </sprite>

      <sprite xpos="6.0" ypos="1.5" angle="0.0">
        <body type="static" fixture="ice" texture="platform01" resilience="1.0">
          <shape type="polygon">
            <point x="0.0" y="0.0"/>
            <point x="1.5" y="0.0"/>
            <point x="1.5" y="0.5"/>
            <point x="0.0" y="0.5"/>
          </shape>
        </body>
      </sprite>

      <sprite body="bridge" xpos="2.75" ypos="2.0" />

      <!-- actors -->
      <sprite id="hero" body="gnome" xpos="2.0" ypos="2.0" angle="0" />
      <sprite id="hero2" body="gnome" xpos="6.5" ypos="2.0" angle="0" />
      <sprite id="target" body="portal" xpos="6" ypos="4.5" angle="0" />

      <!-- inventory -->
    </level>

    <level name="6" width="12.8" height="4.8" background="clouds">

      <!-- infrastructure -->
      <sprite xpos="1" ypos="1" angle="0.0">
        <body name="ground" type="static" resilience="1.0" texture="dirt" fixture="ground">
          <shape type="polygon">
            <point x="0" y="0"/>
            <point x="3" y="0"/>
            <point x="3" y="0.3"/>
            <point x="0" y="0.3"/>
          </shape>
        </body>
      </sprite>

      <!-- actors -->
      <sprite id="hero" body="gnome" xpos="2" ypos="1.3" angle="0" />
      <sprite id="target" body="portal" xpos="4" ypos="4" angle="0" />

      <!-- inventory -->
    </level>

  </levels>
</root>
